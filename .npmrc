# Force npm to install optional dependencies for all platforms
optional=true
fund=false
audit=false

# Ensure native modules are built properly
rebuild=true
foreground-scripts=true

# Platform-specific settings for Vercel
target_platform=linux
target_arch=x64

# Use latest registry for @rollup packages
@rollup:registry=https://registry.npmjs.org/

# Prevent SWC native binding issues
prefer-offline=false
network-timeout=600000
